@model IEnumerable<FPTBook.Models.OrderDetail>

@{
    ViewData["Title"] = "Seller";
}

<h1>Manage Order by Customer</h1>

@if(Model.Count() > 0)
{    double tongbill = 0;
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.User.UserName)
            </th>
                      <th>
                @Html.DisplayNameFor(model => model.Order.User.Address)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
                     <th>
                @Html.DisplayNameFor(model => model.Order.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
           <td>
                 Price
            </td>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    double itemPrice = item.Book.Price*item.Quantity;
                tongbill = itemPrice + tongbill;
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Order.User.UserName)
            </td>
                  <td>
                @Html.DisplayFor(modelItem => item.Order.User.Address)
            </td>
               <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Order.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

             <td>
                @(Math.Round(itemPrice,1))
            </td>
        </tr>
}
<tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
     <td></td>

    <td>Total: @(Math.Round(tongbill,1))</td>
</tr>
    </tbody>
</table>
}
else
{
    <p class="alert alert-danger">Cart is null</p>
}